<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}"><view slot="backText">返回</view><view slot="content">头像</view></cu-custom>
<view class="container">
  <map id="map" 
    longitude="113.324520"
    latitude="23.099994"
    scale="14"
    controls="{{controls}}"
    bindcontroltap="controltap"
    markers="{{markers}}"
    bindmarkertap="markertap"
    polyline="{{polyline}}"
    bindregionchange="regionchange"
    show-location style="width: 100%; height: 800rpx;">
  </map>
  
  <button open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber"></button>

  <view class="bg-yellow padding radius text-center shadow-blur callinfo-avatar" bindtap='callCar'>
    <text class="text-lg">一键出行</text>
  </view>

</view>